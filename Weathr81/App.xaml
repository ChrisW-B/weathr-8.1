<Application x:Class="Weathr81.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"	xmlns:local="using:Weathr81">
    
    <Application.Resources>
        <ai:TelemetryContext x:Key="ApplicationInsightsBootstrapper" xmlns:ai="using:Microsoft.ApplicationInsights"/>
        <DataTemplate x:Key="smallHeader">
            <Grid>
                <ContentPresenter>
                    <TextBlock Text="{Binding}" FontSize="40" Margin="0,-10,0,0" Foreground="White" FontFamily="Segoe UI Light" FontWeight="ExtraLight"/>
                </ContentPresenter>
            </Grid>
        </DataTemplate>
    </Application.Resources>

</Application>